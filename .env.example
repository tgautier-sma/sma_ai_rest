# Exemple de fichier de configuration des variables d'environnement
# Copiez ce fichier en .env et modifiez les valeurs selon vos besoins

# === Configuration Flask ===
FLASK_APP=app.py
FLASK_ENV=production
FLASK_DEBUG=0

# Port et hôte du serveur (mode développement local)
FLASK_RUN_PORT=5000
FLASK_RUN_HOST=0.0.0.0

# === Configuration de la base de données ===
# Par défaut, SQLite est utilisé avec le fichier instance/api_requests.db
# DATABASE_URL=sqlite:///instance/api_requests.db

# Pour PostgreSQL (optionnel) :
# DATABASE_URL=postgresql://user:password@localhost:5432/sma_ai_rest

# Pour MySQL (optionnel) :
# DATABASE_URL=mysql://user:password@localhost:3306/sma_ai_rest

# === Configuration des secrets ===
# Clé secrète pour les sessions Flask (générez-en une unique pour la production)
# SECRET_KEY=your-secret-key-here-change-me-in-production

# === Configuration Gunicorn (production) ===
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=2
GUNICORN_MAX_REQUESTS=1000

# === Configuration du proxy (optionnel) ===
# Si l'application est derrière un reverse proxy
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# === Configuration des logs ===
LOG_LEVEL=INFO
# LOG_FILE=logs/app.log

# === Configuration CORS (optionnel) ===
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# === Configuration de sécurité ===
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax

# === Configuration des limites ===
# MAX_CONTENT_LENGTH=16777216  # 16 MB
# REQUEST_TIMEOUT=30

# === Configuration de développement ===
# En mode développement uniquement
# EXPLAIN_TEMPLATE_LOADING=True
# PRESERVE_CONTEXT_ON_EXCEPTION=True
