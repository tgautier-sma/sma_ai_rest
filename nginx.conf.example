# Configuration Nginx pour SMA AI REST Server
# Placez ce fichier dans nginx/nginx.conf

events {
    worker_connections 1024;
}

http {
    # Configuration de base
    include /etc/nginx/mime.types;
    default_type application/octet-stream;
    
    # Logs
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log warn;
    
    # Performance
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    
    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml text/javascript 
               application/json application/javascript application/xml+rss 
               application/rss+xml font/truetype font/opentype 
               application/vnd.ms-fontobject image/svg+xml;
    
    # Limites
    client_max_body_size 10M;
    client_body_buffer_size 128k;
    
    # Upstream vers Flask
    upstream flask_backend {
        server sma-ai-rest:5000;
        keepalive 32;
    }
    
    # Serveur HTTP (redirection vers HTTPS)
    server {
        listen 80;
        server_name localhost;
        
        # Rediriger tout le trafic HTTP vers HTTPS
        # Décommentez pour forcer HTTPS
        # return 301 https://$server_name$request_uri;
        
        # Ou servir directement en HTTP
        location / {
            proxy_pass http://flask_backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # WebSocket support (si nécessaire)
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            
            # Timeouts
            proxy_connect_timeout 60s;
            proxy_send_timeout 60s;
            proxy_read_timeout 60s;
        }
        
        # Health check endpoint
        location /health {
            proxy_pass http://flask_backend/health;
            access_log off;
        }
        
        # Fichiers statiques (cache)
        location /static/ {
            proxy_pass http://flask_backend/static/;
            expires 30d;
            add_header Cache-Control "public, immutable";
        }
    }
    
